/* Content                         */
/*   Font sizes:                   */
/*     header h1 - 50px            */
/*     h2, p - 20px                */
/*     default, pre, input - 16px  */

header, section, footer {
  font-family: "Arial";
}

header {
  font-weight: normal;
  letter-spacing: -.05em;
  position: absolute;
  left: 30px;
  top: 25px;
  margin: 0;
  padding: 0;
  font-size: 50px;
  @mixin textShadow(rgba(0, 0, 0, 0.2), 0, 2px, 5px);
}

h1 {
  font-size: 100%;
  display: inline;
  font-weight: normal;
  padding: 0;
  margin: 0;
}

h2 {
  color: black;
  font-size: 20px;
  padding: 0;
  margin: 15px 0 5px 0;
}

h2:first-child {
  margin-top: 0;
}

section, footer {
  @mixin textShadow(rgba(0, 0, 0, 0.2), 0, 2px, 5px);
  color: #3f3f3f;
  margin: 100px 30px 0;
  display: block;
  overflow: hidden;
}

footer {
  font-size: 12px;
  margin: 20px 0 0 30px;
}

.vbox {
  @mixin displayAsBox;
  @mixin boxOrient(vertical);
  @mixin boxAlign(stretch);
}

.hbox {
  @mixin displayAsBox;
  @mixin boxOrient(horizontal);
  @mixin boxAlign(stretch);
}

.flex {
  @mixin boxFlex(1);
}

.noflex {
  @mixin boxFlex(0);
}

.boxcenter {
  @mixin boxPack(center);
}

a {
  color: inherit;
  display: inline-block;
  text-decoration: none;
  line-height: 110%;
  border-bottom: 2px solid #3f3f3f;
}

li {
  list-style: none;
  padding: 10px 0;
}

button {
  font-family: Verdana;
  font-size: 20px;
}

pre {
  text-align: left;
  padding: 10px 20px;
  & button {
    margin: 2px;
  }
  & select {
    font-family: Monaco, Courier;
    border: 1px solid #c61800;
  }
  & b {
    font-weight: normal;
    color: #c61800;
    @mixin textShadow(#c61800, 0, 0, 1px);
  }
  & em {
    font-weight: normal;
    font-style: normal;
    color: #18a600;
    @mixin textShadow(#18a600, 0, 0, 1px);
  }
  & input[type="range"] {
    height: 6px;
    cursor: pointer;
    width: auto;
  }
}

.bullets {
  font-size: 40px;
  & li::before {
    content: 'Â· ';
  }
}

section.left {
  float: left;
  width: 390px;
}

section.middle {
  line-height: 68px;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  height: 700px;
  width: 900px;
}

input {
  font-size: 16px;
  margin-right: 10px;
  font-family: Helvetica;
  padding: 3px 5px;
}

input[type="range"] {
  width: 100%;
}

div.example {
  display: block;
  padding: 10px 20px;
  color: black;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 8px;
  margin-bottom: 10px;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

video {
  border-radius: 8px;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

.css, .js, .html, .key {
  font-family: "Arial";
  color: black;
  display: inline-block;
  padding: 6px 10px 3px 10px;
  font-size: 25px;
  line-height: 30px;
  text-shadow: none;
  letter-spacing: 0;
  bottom: 10px;
  position: relative;
  border-radius: 10px;
  background: white;
  @mixin boxShadow(0, 2px, 5px, rgba(0, 0, 0, 0.1));
}

.css {
  @mixin bgGradient(#ff4, #ffa, #ff4);
}

.js {
  @mixin bgGradient(#4f4, #afa, #4f4);
}

.html {
  @mixin bgGradient(#e88, #fee, #e88);
}

.key {
  font-family: "Lucida console", Monospace, Arial;
}

:not(header) > .css,
:not(header) > .js,
:not(header) > .html,
:not(header) > .key {
  margin: 0 5px;
  bottom: 4px;
}

.two-column {
  @mixin columnCount(2);
}

.stroke {
  @mixin textStroke(1px, red);
}

.center {
  text-align: center;
}

.formula {
  font-size: 50px;
}

[data-build] > * {
  @mixin transitionSingle(opacity, 0.5s, ease-in-out, 0.04s);
}

[data-build] > *.to-build {
  opacity: 0;
}

#speaker-note {
  position:absolute;
  left: 0;
  top: 80%;
  width: 100%;
  height: 20%;
  z-index: 8;
  opacity: 0.75;
  background-color: white;
  overflow: auto;
  padding: 2px 20px;
  @mixin transitionSingle(top, 0.5s, ease-in-out);
  
  &.invisible {
    top: 101%;
  }
}

.sidebar {
  z-index: 999;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
  top: 0;
  position: absolute;
  display: block;
  margin: 0;
  padding: 10px 16px;
  overflow: auto;
  @mixin transitionSingle(margin, 0.04s, ease-in-out);

  &.invisible {
    margin-left: -400px;
  }
  & table {
    border-collapse: collapse;
  }
  & caption {
    @mixin textShadow(rgba(0, 0, 0, 0.2), 0, 2px, 5px);
    font-size: 24px;
    font-weight: bold;
    line-height: 55px;
  }
  & tr {
    margin: 2px 0;
    border-bottom: 1px solid #CCC;
  }
  & th{
    text-align: left;
    max-width: 300px;
  }
  & td {
    text-align: right;
    padding-left: 20px;
    padding-right: 5px;
    font-family: Monospace;
  }
}

nav#helpers {
