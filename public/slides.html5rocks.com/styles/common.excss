  }
}

#title-slide hgroup {
  color: black;
  & h1 {
    letter-spacing: -2px;
    font-size: 96px;
  }
  & h2 {
    margin-top: -5px;
    font-size: 40px;
    letter-spacing: -1px;
  }
}

#timeline {
  margin-top: 15px;
  font-size: 50px;
  & li {
    padding: 0;
  }
  & .year {
    display: inline-block;
